      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
      <span>性別</span><br>
      <%= form.radio_button :sex, :male %>
      <%= form.label :sex, "男性", {value: :male, style: "display: inline-block;"} %>
      <%= form.radio_button :sex, :female %>
      <%= form.label :sex, "女性", {value: :female, style: "display: inline-block;"} %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>